<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.IndustriesDictionary.MainPage"   
             Shell.NavBarIsVisible="False"
             BackgroundColor="#449DE3F6"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             
             >

    <!--necessary Code  for any page and Dont forget  xmlns:mct  line in top of page-->
    <!--change status bar color #29A0B1 -->
    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#189AB4"  />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="80,*" >

        <Border 
            HeightRequest="50"
            BackgroundColor="White" 
            Margin="10,10"
            StrokeShape="RoundRectangle 8"
            >
            <Border.Shadow >
                <Shadow Brush="#000000"
                                Offset="0 , 4"
                                Opacity=".25"
                                Radius="4"/>
            </Border.Shadow>

            <HorizontalStackLayout>

                <Entry Placeholder="Search Some Thing"/>
            </HorizontalStackLayout>
        </Border>

        <Grid Grid.Row="1">
            <Border  BackgroundColor="White" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="120" HeightRequest="150" StrokeShape="RoundRectangle 8" Margin="10,-2">

                <VerticalStackLayout Margin="10" Spacing="5">
                    <HorizontalStackLayout Spacing="10">
                    <ImageButton Source="english.svg" WidthRequest="34" HeightRequest="34"/>
                        <Label Text="English"/>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="10">
                    <ImageButton Source="germany.svg" WidthRequest="34" HeightRequest="34"/>
                        <Label Text="Dutch"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                    <ImageButton Source="iran.png" WidthRequest="34" HeightRequest="34"/>
                        <Label Text="فارسی"/>
                    </HorizontalStackLayout>
                    
                </VerticalStackLayout>
            </Border>
            
        </Grid>
    </Grid>


</ContentPage>
